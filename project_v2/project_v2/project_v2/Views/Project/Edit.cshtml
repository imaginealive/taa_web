
@{
    ViewData["Title"] = "Edit";
}

<h2>แก้ไขรายละเอียดโปรเจค</h2>

<form asp-controller="Project" asp-action="Edit" method="post" class="panel panel-primary">
    <div class="panel-body">

        <div class="row">

            <div class="form-horizontal col-sm-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label">ชื่อโปรเจค</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="ชื่อของโปรเจค" />
                    </div>
                </div>
            </div>

            <div class="form-horizontal col-sm-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label">รายละเอียด</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" placeholder="รายละเอียดของโปรเจค" rows="6"></textarea>
                    </div>
                </div>
            </div>

            <div class="form-horizontal col-sm-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label">รูปภาพโปรเจค</label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" placeholder="รูปภาพโปรเจค" />
                    </div>
                </div>
            </div>

            <div class="form-horizontal col-sm-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label">แผนก</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="ชื่อแผนกสำหรับโปรเจค" />
                    </div>
                </div>
            </div>

            <div class="form-horizontal col-sm-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label">วันที่สร้างโปรเจค</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@DateTime.Now.ToShortDateString()" disabled />
                    </div>
                </div>
            </div>

            <div class="form-horizontal col-sm-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label">วันที่เสร็จสิ้นโปรเจค</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" value="@DateTime.Now" />
                    </div>
                </div>
            </div>

        </div>
        <hr />
        <div class="row">

            <div class="col-sm-2 col-sm-offset-8">
                <a asp-controller="Project" asp-action="Detail" class="btn btn-block btn-default">ยกเลิก</a>
            </div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-block btn-primary">ยืนยัน</button>
            </div>
        </div>
    </div>
</form>