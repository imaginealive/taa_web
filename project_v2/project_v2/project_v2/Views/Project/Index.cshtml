@model project_v2.Models.ProjectDetailModel
@{
    ViewData["Title"] = "Index";

    const int DefaultValue = 0;
    const int minimumValue = 1;
    int featureSideMenuCount = minimumValue;
    int featureContentCount = minimumValue;

    int storySideMenuCount = minimumValue;
    int storyContentCount = minimumValue;

    int taskSideMenuCount = minimumValue;
    int taskContentCount = minimumValue;

    var today = DateTime.Now.Date;
    var startDate = Model.Project.CreateDate.Date;
    var lateDate = Model.Project.ClosingDate.Date < today ? Model.Project.ClosingDate.Date : today;
    var totalWorks = Model.Features.Sum(ft => ft.Stories.Sum(st => st.Tasks.Count())) + Model.Features.Sum(ft => ft.Stories.Count()) + Model.Features.Count();
    List<double> remaining = new List<double> { };
    List<double> done = new List<double> { };
}
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['วันที่', 'จำนวนงานเสร็จของวัน', 'จำนวนงานที่เหลือ'],
            @for (var i = startDate; i <= lateDate; i = i.AddDays(minimumValue))
            {
                var doneToday = Model.Features.Sum(ft => ft.Stories.Sum(st => st.Tasks.Where(t => t.WorkDoneDate.HasValue).Count())) + Model.Features.Sum(ft => ft.Stories.Where(st => st.WorkDoneDate.HasValue).Count()) + Model.Features.Where(ft => ft.WorkDoneDate.HasValue).Count();
                var remainToday = totalWorks - done.Sum();
                @Html.Raw($"['{i.ToShortDateString()}', {doneToday}, {remainToday}]");
                if (i != lateDate) {
                    @Html.Raw(",");
                }
                done.Add(doneToday);
                remaining.Add(remainToday);
            }
        ]);

        var options = {
            title: 'ความก้าวหน้าของโปรเจ็ค',
            curveType: 'function',
            legend: { position: 'bottom' }
    };

    var chart = new google.visualization.AreaChart(document.getElementById('curve_chart'));

    chart.draw(data, options);
    }
</script>
<a asp-controller="Home" asp-action="Index" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> ย้อนกลับ</a>

<div class="panel panel-primary" style="margin-top: 2em">
    <div class="panel-heading"><h3>ข้อมูลภาพรวมของโปรเจค</h3></div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-2">
                <h3>ข้อมูลโปรเจค</h3>
            </div>
            <div class="col-lg-10">
                <div class="col-lg-6">
                    <dl>
                        <dt><label asp-for="Project.ProjectName"></label></dt>
                        <dd>@Model.Project.ProjectName</dd>
                        <dt><label asp-for="Project.Description"></label></dt>
                        <dd>@Model.Project.Description</dd>

                    </dl>
                </div>
                <div class="col-lg-6">
                    <dl>
                        <dt><label asp-for="Project.CreateDate"></label></dt>
                        <dd>@Model.Project.CreateDate.ToShortDateString()</dd>
                        <dt><label asp-for="Project.ClosingDate"></label></dt>
                        <dd>@Model.Project.ClosingDate.ToShortDateString()</dd>
                    </dl>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-2">
                <h3>ภาพรวมของงาน</h3>
            </div>
            <div class="col-lg-10">
                <div class="col-lg-6">
                    <dl>
                        <dt>สมาชิกทั้งหมด</dt>
                        <dd>@Model.Memberships.Count()</dd>
                        @if (Model.Project.ClosingDate.Date > today)
                        {
                            <dt>จำนวนวันทำงานเหลือ</dt>
                            <dd>@((Model.Project.ClosingDate.Date - today).TotalDays + minimumValue) วัน</dd>
                            <dt>คาดคะเนค่าเฉลี่ยของงานที่ต้องทำต่อวัน</dt>
                            <dd>@((remaining.LastOrDefault() / ((Model.Project.ClosingDate.Date - today).TotalDays + minimumValue)).ToString("#0.##")) งาน/วัน</dd>

                        }
                    </dl>
                </div>
                <div class="col-lg-6">
                    <dl>
                        <dt>งานทั้งหมด</dt>
                        <dd>@totalWorks งาน</dd>
                        <dt>จำนวนงานเสร็จ</dt>
                        <dd>@(done.Sum()) งาน (@(done.Sum() / totalWorks * 100)%)</dd>
                        <dt>ค่าเฉลี่ยของงานเสร็จต่อวัน</dt>
                        <dd>@(done.Sum() / Math.Round((lateDate - startDate).TotalDays + minimumValue)) งาน/วัน</dd>
                        <dt>จำนวนงานเหลือ</dt>
                        <dd>@(remaining.LastOrDefault()) งาน (@(remaining.LastOrDefault() / totalWorks * 100)%)</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-sm-offset-9">
                <a asp-controller="Project" asp-action="Detail" asp-route-projectid="@Model.Project._id" class="btn btn-block btn-default">ดูรายละเอียดของโปรเจค</a>
            </div>
        </div>
        <hr />

        <div id="curve_chart" style="min-width:100%; padding-bottom: 20px;"></div>
    </div>
</div>

