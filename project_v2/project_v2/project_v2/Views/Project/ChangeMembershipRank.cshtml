@model project_v2.Models.EditRankModel
@{
    Layout = null;
}
<form class="modal-content" asp-action="ChangeMembershipRank">
    @Html.HiddenFor(model => model.ProjectId)
    @Html.HiddenFor(model => model.AccountId)
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title" id="myModalLabel">เปลี่ยนตำแหน่งงานให้กับสมาชิก</h3>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-sm-3 col-sm-offset-1">
                <label>ชื่อ</label>
            </div>
            <div class="col-sm-8">
                <p>@Model.Name</p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-sm-offset-1">
                <label>อีเมล์</label>
            </div>
            <div class="col-sm-8">
                <p>@Model.Name</p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <select class="form-control" asp-for="RankId">
                    @foreach (var item in Model.Ranks)
                    {
                        <option value="@item._id">@item.RankName</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

        <button class="btn btn-primary" type="submit">Save changes</button>
    </div>
</form>
